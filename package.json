{
	"name": "balancia",
	"version": "1.0.0",
	"description": "Scaffold app for ReactJS + NestJS projects (fully written in TS)",
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/TheMineWay/Balancia"
	},
	"scripts": {
		"dev:client": "pnpm --filter balancia-client dev",
		"dev:server": "pnpm --filter balancia-server dev",
		"dev:packages": "nodemon --watch packages --ext ts,json --ignore 'packages/**/dist/*' --ignore 'packages/**/dist' --ignore 'packages/**/build/*' --ignore 'packages/**/index.ts' --exec \"pnpm build:packages\"",
		"dev": "tmux new-session -d -s balancia 'pnpm dev:client' \\; split-window -h 'pnpm dev:server' \\; attach-session -d",
		"start:client": "pnpm --filter balancia-client start",
		"start:server": "pnpm --filter balancia-server start",
		"start:docs": "pnpm --filter docs start",
		"start": "tmux new-session -d -s balancia 'pnpm start:client' \\; split-window -h 'pnpm start:server' \\; attach-session -d",
		"build:client": "pnpm --filter balancia-client build",
		"build:server": "pnpm --filter balancia-server build",
		"build:packages": "pnpm --filter @shared/* build",
		"build:docs": "pnpm --filter docs build",
		"build": "pnpm build:packages && pnpm build:client && pnpm build:server",
		"test": "vitest run --reporter=verbose",
		"test:dev": "vitest --watch",
		"test:ui": "vitest --ui",
		"tools": "pnpm --filter scripts launch && pnpm lint:fix",
		"db:generate": "pnpm --filter balancia-server \"db:generate\"",
		"db:migrate": "pnpm --filter balancia-server \"db:migrate\"",
		"lint": "pnpm exec biome format",
		"lint:fix": "pnpm exec biome format --write",
		"lint:report": "pnpm biome check --reporter=summary",
		"clean:all": "find . -type d \\( -name \"node_modules\" -or -name \"dist\" -or -name \"test-results\" -or -name \"playwright-report\" -or -name \".docusaurus\" -or -name \"build\" \\) -exec rm -rf {} +"
	},
	"keywords": [
		"scaffold",
		"react",
		"nest"
	],
	"author": {
		"name": "TheMineWay",
		"url": "https://github.com/TheMineWay"
	},
	"engines": {
		"node": ">=24",
		"pnpm": ">=10"
	},
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@vitest/ui": "3.2.4",
		"concurrently": "^9.2.0",
		"nodemon": "^3.1.10",
		"vitest": "^3.2.4"
	},
	"workspaces": [
		"apps/*",
		"packages/*",
		"docs",
		"scripts"
	],
	"pnpm": {
		"ignoredBuiltDependencies": [
			"@scarf/scarf",
			"core-js",
			"core-js-pure",
			"unrs-resolver"
		],
		"onlyBuiltDependencies": [
			"@nestjs/core",
			"@swc/core",
			"@tailwindcss/oxide",
			"bcrypt",
			"esbuild"
		]
	}
}
