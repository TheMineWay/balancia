{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2023",
		"lib": ["ES2023"],
		"strict": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./",
		"baseUrl": "./",
		"incremental": true,
		"types": ["vitest"],
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		"paths": {
			"@pkg": ["./package.json"],
			"@utils/*": ["src/core/utils/*"],
			"@constants/*": ["src/constants/*"],
			"@dto/*": ["src/core/dto/*"],
			"@api/*": ["src/api/*"],
			"@database/*": ["src/database/*"],
			"@repository/*": ["src/database/repository/*"],
			"@schemas/*": ["src/database/schemas/*"],
			"@core/*": ["src/core/*"],
			"@mocks/*": ["src/mocks/*"],
			"@guards/*": ["src/guards/*"],
			"@ts-types/*": ["src/types/*"],
			"@external/*": ["src/external/*"]
		}
	}
}
